{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src/**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": false,
    "allowJs": true,
    "plugins": [
      {
        "name": "@astrojs/tsplugin"
      }
    ],
    "paths": {
      "@basics/*": [
        "./src/components/basics/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ]
    },
    "types": ["astro/client"]
  }
}

