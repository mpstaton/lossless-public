---
import MainContent from "@components/MainContent.astro";
import LeftPanel from "@components/nav/LeftPanel.astro";
import RightPanel from "@components/nav/RightPanel.astro";

//This is supposed to set up a three column
// layout with a left and right panel, and a main column.
---

<div class="three-column-layout">
  <div class="left-panel">
    <LeftPanel />
  </div>
  <div class="main-content">
    <MainContent />
  </div>
  <div class="right-panel">
    <RightPanel />
  </div>
</div>

<style>
  .three-column-layout {
    display: flex;
    flex-direction: row;
    width: 100vw;
    min-height: calc(100vh - 120px); /* Adjust based on header/footer height */
    position: relative;
    margin: 0;
    padding: 0;
    overflow-x: hidden; /* Prevent horizontal scrolling when panels slide */
  }

  .left-panel {
    position: sticky;
    top: 0;
    left: 0;
    height: 100%;
    z-index: 10;
    /* Width is determined by the LeftPanel component */
  }

  .main-content {
    flex: 1;
    overflow-y: auto;
    padding: 0 1rem;
    margin: 0 auto;
    max-width: 1200px;
    transition: margin 0.3s ease;
    /* Main content will adapt to the space left by the panels */
  }

  .right-panel {
    position: sticky;
    top: 0;
    right: 0;
    height: 100%;
    z-index: 10;
    /* Width is determined by the RightPanel component */
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .three-column-layout {
      flex-direction: column;
    }

    .left-panel,
    .right-panel {
      position: static;
      width: 100%;
      border-bottom: 1px solid var(--clr-lossless-ui-btn-border);
    }
  }
</style>
