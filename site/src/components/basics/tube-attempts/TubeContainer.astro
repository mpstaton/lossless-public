---
import "../../styles/global.css";
---

<div class="tube-container">
  <div class="tube-layer"></div>
  <div class="tube-layer"></div>
  <div class="tube-layer"></div>
  <div class="tube-layer"></div>
  <slot />
</div>

<style>
  .tube-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 300px;
    background: var(--grd__primary-bg);
    padding: 2rem;
    overflow: hidden;
  }

  .tube-layer {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 6px solid var(--clr-lossless-primary-dark);
  }

  .tube-layer:nth-child(1) {
    clip-path: polygon(
      0% 20%,
      5% 20%,
      10% 15%,
      20% 10%,
      30% 7%,
      40% 5%,
      50% 4%,
      60% 5%,
      70% 7%,
      80% 10%,
      90% 15%,
      95% 20%,
      100% 20%,
      100% 80%,
      95% 80%,
      90% 85%,
      80% 90%,
      70% 93%,
      60% 95%,
      50% 96%,
      40% 95%,
      30% 93%,
      20% 90%,
      10% 85%,
      5% 80%,
      0% 80%
    );
    margin: 10px;
  }

  .tube-layer:nth-child(2) {
    clip-path: polygon(
      0% 25%,
      5% 25%,
      10% 20%,
      20% 15%,
      30% 12%,
      40% 10%,
      50% 9%,
      60% 10%,
      70% 12%,
      80% 15%,
      90% 20%,
      95% 25%,
      100% 25%,
      100% 75%,
      95% 75%,
      90% 80%,
      80% 85%,
      70% 88%,
      60% 90%,
      50% 91%,
      40% 90%,
      30% 88%,
      20% 85%,
      10% 80%,
      5% 75%,
      0% 75%
    );
    margin: 14px;
  }

  .tube-layer:nth-child(3) {
    clip-path: polygon(
      0% 30%,
      5% 30%,
      10% 25%,
      20% 20%,
      30% 17%,
      40% 15%,
      50% 14%,
      60% 15%,
      70% 17%,
      80% 20%,
      90% 25%,
      95% 30%,
      100% 30%,
      100% 70%,
      95% 70%,
