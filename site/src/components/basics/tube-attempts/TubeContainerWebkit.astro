---
import "../../styles/global.css";
---

<div class="tube-container">
  <div class="tube-layer"></div>
  <div class="tube-layer"></div>
  <div class="tube-layer"></div>
  <div class="tube-layer"></div>
  <slot />
</div>

<style>
  .tube-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 300px;
    background: var(--grd__primary-bg);
    padding: 2rem;
    overflow: hidden;
  }

  .tube-layer {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 6px solid var(--clr-lossless-primary-dark);
  }

  .tube-layer:nth-child(1) {
    --mask: radial-gradient(
          237.24px at 50% calc(100% + 120px),
          #0000 calc(99% - 6px),
          #000 calc(101% - 6px) 99%,
          #0000 101%
        )
        calc(50% - 400px) calc(50% - 104px + 0.5px) / 800px 208px,
      radial-gradient(
          237.24px at 50% -120px,
          #0000 calc(99% - 6px),
          #000 calc(101% - 6px) 99%,
          #0000 101%
        )
        50% calc(50% + 104px) / 800px 208px;
    -webkit-mask: var(--mask);
    mask: var(--mask);
    margin: 10px;
  }

  .tube-layer:nth-child(2) {
    --mask: radial-gradient(
          217.24px at 50% calc(100% + 100px),
          #0000 calc(99% - 6px),
          #000 calc(101% - 6px) 99%,
          #0000 101%
        )
        calc(50% - 350px) calc(50% - 94px + 0.5px) / 700px 188px,
      radial-gradient(
          217.24px at 50% -100px,
          #0000 calc(99% - 6px),
          #000 calc(101% - 6px) 99%,
          #0000 101%
        )
        50% calc(50% + 94px) / 700px 188px;
    -webkit-mask: var(--mask);
    mask: var(--mask);
    margin: 25px;
  }

  .tube-layer:nth-child(3) {
    --mask: radial-gradient(
          197.24px at 50% calc(100% + 80px),
          #0000 calc(99% - 6px),
          #000 calc(101% - 6px) 99%,
          #0000 101%
        )
        calc(50% - 300px) calc(50% - 84px + 0.5px) / 600px 168px,
      radial-gradient(
          197.24px at 50% -80px,
          #0000 calc(99% - 6px),
          #000 calc(101% - 6px) 99%,
          #0000 101%
        )
        50% calc(50% + 84px) / 600px 168px;
    -webkit-mask: var(--mask);
    mask: var(--mask);
    margin: 40px;
  }

  .tube-layer:nth-child(4) {
    --mask: radial-gradient(
          177.24px at 50% calc(100% + 60px),
          #0000 calc(99% - 6px),
          #000 calc(101% - 6px) 99%,
          #0000 101%
        )
        calc(50% - 250px) calc(50% - 74px + 0.5px) / 500px 148px,
      radial-gradient(
          177.24px at 50% -60px,
          #0000 calc(99% - 6px),
          #000 calc(101% - 6px) 99%,
          #0000 101%
        )
        50% calc(50% + 74px) / 500px 148px;
    -webkit-mask: var(--mask);
    mask: var(--mask);
    margin: 55px;
  }

  /* Ensure content is above the tube layers */
  ::slotted(*) {
    position: relative;
    z-index: 1;
  }
</style>
